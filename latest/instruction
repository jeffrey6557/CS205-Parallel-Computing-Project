module load Anaconda/2.1.0-fasrc01
conda create -n ody --clone="$PYTHON_HOME"
source activate ody
conda install -c anaconda pygpu=0.6.4

srun -n 1 --pty --x11=first -p interact -t 0-06:00 --mem=1000 /bin/bash
srun --pty --mem 1000 -p gpu -t 0-6:00 -n 1 -N 1 --gres=gpu:1 /bin/bash

THEANO_FLAGS=device=cpu python gpu_test.py
THEANO_FLAGS="device=cpu,openmp=1,floatX=float32" python gpu_test.py
THEANO_FLAGS=mode=FAST_RUN,device=gpu,floatX=float32 python gpu_test.py


mpirun -np 3 THEANO_FLAGS=mode=FAST_RUN,device=gpu,floatX=float32 python MPI+theano.py
